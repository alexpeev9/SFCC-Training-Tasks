<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <custom-type type-id="PRODUCT_SUBSCRIBTION">
        <display-name xml:lang="x-default">PRODUCT SUBSCRIBTION</display-name>
        <description xml:lang="x-default">If Product is not available user can subscribe to be notified, when the product is available.</description>
        <staging-mode>no-staging</staging-mode>
        <storage-scope>site</storage-scope>
        <key-definition attribute-id="productId">
            <display-name xml:lang="x-default">Product Id</display-name>
            <type>string</type>
            <min-length>0</min-length>
        </key-definition>
        <attribute-definitions>
            <attribute-definition attribute-id="customerPhoneNumbers">
                <display-name xml:lang="x-default">Customer Phone Numbers</display-name>
                <type>text</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </attribute-definitions>
        <group-definitions>
            <attribute-group group-id="properties">
                <display-name xml:lang="x-default">Properties</display-name>
                <attribute attribute-id="customerPhoneNumbers"/>
                <attribute attribute-id="productId"/>
            </attribute-group>
        </group-definitions>
    </custom-type>
</metadata>
